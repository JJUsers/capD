<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DestinationSearchActivity">
        </activity>

        <activity android:name=".DestinationListActivity">
        </activity>

        <activity android:name=".ReconfirmDestinationActivity">
        </activity>

        <activity android:name=".UserGPSTest">
        </activity>

        <activity android:name=".NavigationActivity">
        </activity>

        <activity android:name=".VoiceSpeedSettingActivity">
        </activity>

        <activity android:name=".StationSelectActivity">
        </activity>

        <activity android:name=".BusListActivity">
        </activity>

        <activity android:name=".BusInfoActivity">
        </activity>

    </application>



</manifest>